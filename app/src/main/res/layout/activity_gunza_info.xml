<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gunza_info.GunzaInfo"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopup_d_medium"
            android:text="자격증 정보"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/examCertificate"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/colorLemonGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="응시순\n자격증 추천" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/passCertificate"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/colorLightGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="합격순\n자격증 추천" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopup_d_medium"
            android:text="대학생 정보"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remoteCourse"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/colorLemonGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="대학별 원격강의\n개설과목 확인" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remoteCoursePass"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/colorLightGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="대학별 원격강의\n수료순 확인" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopup_d_medium"
            android:text="사관학교 정보"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/army"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/colorLemonGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="각군 사관학교\n교육과정" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/competitiveness"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/colorLightGreen"
                android:fontFamily="@font/gunza_font_pixel"
                android:text="각군 사관학교\n 입학 경쟁률"/>
        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWoodBrown"
        android:fontFamily="@font/gunza_font_pixel"
        android:text="◀ 홈으로"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
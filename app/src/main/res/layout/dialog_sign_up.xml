<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/kopup_d_medium"
        android:textSize="13sp"
        android:backgroundTint="@color/black"
        android:hint="아이디" />
    <TextView
        android:id="@+id/warnIdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="중복된 아이디 입니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
    <TextView
        android:id="@+id/warnIdEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="아이디를 입력해야 합니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/kopup_d_medium"
        android:textSize="13sp"
        android:backgroundTint="@color/black"
        android:hint="닉네임" />
    <TextView
        android:id="@+id/warnNameEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="닉네임을 입력해야 합니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
    <EditText
        android:id="@+id/editUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/kopup_d_medium"
        android:backgroundTint="@color/black"
        android:textSize="13sp"
        android:hint="소속 부대명" />
    <TextView
        android:id="@+id/warnUnitEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="소속 부대를 입력해야 합니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
    <EditText
        android:id="@+id/editPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_pw"
        android:drawablePadding="10dp"
        android:fontFamily="@font/kopup_d_medium"
        android:textSize="13sp"
        android:backgroundTint="@color/black"
        android:hint="비밀번호" />
    <TextView
        android:id="@+id/warnPwEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="비밀 번호를 입력해야 합니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
    <EditText
        android:id="@+id/editPwCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_check"
        android:drawablePadding="10dp"
        android:fontFamily="@font/kopup_d_medium"
        android:textSize="13sp"
        android:backgroundTint="@color/black"
        android:hint="비밀번호 확인" />
    <TextView
        android:id="@+id/warnPwCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="5dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:fontFamily="@font/kopup_d_medium"
        android:textColor="@color/colorWarnRed"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        tools:ignore="RtlSymmetry"
        app:drawableLeftCompat="@drawable/ic_warning" />
</LinearLayout>